<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"
      class="needs-validation" novalidate>

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text"
          class="form-control" required/>
          <div class="invalid-feedback">
            Please title shoud be valid
          </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"
          class="form-control" required><%= listing.description %></textarea>
          <div class="invalid-feedback">
            Please description shoud be valid
          </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]" class="form-control"
          value="<%= listing.image %>" type="text" required/>
          <div class="invalid-feedback">
            Please enter valid image shoud be valid
          </div>
      </div>
      <br /><br />
      <div class="row">
        <div class="mb-3 col-md-4">
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" class="form-control"
              value="<%= listing.price %>" type="number" required/>
              <div class="invalid-feedback">
                Please price shoud be valid
              </div>
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]" class="form-control"
              value="<%= listing.country %>"
              type="text" required/>
              <div class="invalid-feedback">
                Please country shoud be valid
              </div>
          </div>
        </div>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]" class="form-control"
          value="<%= listing.location %>" type="text" required/>
          <div class="invalid-feedback">
            Please location shoud be valid
          </div>
      </div>

      <br /><br />
      <button class=" btn btn-dark edit-btn">Edit</button>
    </form>
  </div>
</div>